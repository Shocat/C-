@model List<Test_task.Models.Car>

@{
    ViewData["Title"] = "Home Page";
}

@foreach (var model in Model)
{
  <div style="text-align: center; margin-bottom: 80px;">
    <img src="@Url.Content(model.Content.ImagePath)" style="width: 50%; height: auto; margin-bottom: 50px;">
   
    <div style="display: flex; justify-content: center;">
        <div>@Html.DisplayFor(modelItem => model.Autor)</div>
        <div style="margin-left: 80px">@Html.DisplayFor(modelItem => model.Name_Auto)</div>
        <div style="margin-left: 80px">@Html.DisplayFor(modelItem => model.Date_Create)</div>
    </div>
  
    <div style="transform: translateX(80%); text-align: center; width: 500px; margin-top: 50px">
        @Html.DisplayFor(modelItem => model.Content.Info)
    </div>

  </div>
}

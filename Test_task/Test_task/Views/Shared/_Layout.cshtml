<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Test_task</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Test_task.styles.css" asp-append-version="true" />
      <style>
        
        .sidebar {
            width: 200px;
            height: 100vh; 
            position: fixed;
            top: 0;
            right: 0;
            background-color: #f1f1f1;
            padding: 20px;
            overflow-y: auto; 
        }

        
        .sidebar-content {
            margin-bottom: 20px;
        }

        
        .sidebar a {
            display: block;
            margin-bottom: 10px;
            color: #000;
            text-decoration: none;
        }
        
       
        .main-content {
            margin-right: 220px; 
            padding: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
          
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                   
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Contacts">Контакты</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/ADD">Добавить</a>
                        </li>

                 
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!--    




    -->
    <div class="sidebar">
        <div class="sidebar-content">
            <h4>Меню</h4>
            <a class="nav-link text-dark" href="/Home">ВСЕ</a>
          
              <a class="nav-link text-dark" href="/light_car">легковые</a>
              <a class="nav-link text-dark" href="/gruz_car">грузовые</a>
              <a class="nav-link text-dark" href="/autobus_car">автобусы</a>
            
        </div>
        
         
    </div>
    

</body>
</html>
